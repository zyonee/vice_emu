#define	mytpi 	tpi1

#define	MYIRQ	IK_IRQ

#define	MYTPI	TPI1

INCLUDES()
{
#include "parallel.h"
#include "c610cia.h"
#include "crtc.h"

#define	mycpu_set_int(a,b)	maincpu_set_irq((a),(b))

#define	TPI_SET_CA(a)		crtc_set_char((a))
#define	TPI_SET_CB(a)

}

RESET()
{
        /* assuming input after reset */
        par_set_atn(0);
        par_set_ndac(0);
        par_set_nrfd(0);
        par_set_dav(0);
        par_set_eoi(0);
        par_set_bus(0);
	cia1_set_ieee_dir(0);
}

STORE_PA()
{
	{
	    BYTE tmp = ~byte;
	    cia1_set_ieee_dir(byte & 2);
	    if (byte & 2) {
		par_set_ndac(0);
		par_set_nrfd(0);
                par_set_atn( tmp & 0x08 );
                par_set_dav( tmp & 0x10 );
                par_set_eoi( tmp & 0x20 );
	    } else {
		/* order is important */
                par_set_nrfd( tmp & 0x80 );
                par_set_ndac( tmp & 0x40 );
		par_set_atn(0);
		par_set_dav(0);
		par_set_eoi(0);
	    }
	}
}

STORE_PB()
{
}

#define	STORE_PC

READ_PA()
{
                byte = par_atn ? 0 : 8;
                byte += par_dav ? 0 : 16;
                byte += par_eoi ? 0 : 32;
                byte += par_ndac ? 0 : 64;
                byte += par_nrfd ? 0 : 128;
}

READ_PB()
{
}

#define	READ_PC

