    BEGIN
        MENUITEM "&Video settings...",     IDM_VIDEO_SETTINGS
        MENUITEM "&Device settings...",    IDM_DEVICEMANAGER
        MENUITEM "D&rive settings...",     IDM_DRIVE_SETTINGS
        MENUITEM "&Printer settings...",   IDM_PRINTER_SETTINGS
