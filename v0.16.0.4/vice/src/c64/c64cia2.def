/* Header for building cia2.c (CIA #2 emulation in the C64). */


#define mycpu maincpu

#define myclk clk

#define mycia cia2

#define MYCIA CIA2

#define READ_SDR

#define STORE_SDR


/* #define CIA2_TIMER_DEBUG */

#define	cia2_set_int_clk		maincpu_set_nmi_clk
#define	CIA2_INT			IK_NMI

INCLUDES()
{
#include "vmachine.h"
#include "vicii.h"
#include "maincpu.h"
#include "drive.h"
#include "c64mem.h"
#include "c64iec.h"
#include "c64cia.h"
#ifdef HAVE_PRINTER
#include "pruser.h"
#endif
#ifdef HAVE_RS232
#include "rsuser.h"
#endif
}

PRE_CIA_FUNCS()
{
    /* Pointer to the IEC structure.  */
    static iec_info_t *iec_info;

    /* Current video bank (0, 1, 2 or 3).  */
    static int vbank;

    static iec_cpu_write_callback_t iec_cpu_write_callback[4] = { 
        iec_cpu_write_conf0, iec_cpu_write_conf1,
        iec_cpu_write_conf2, iec_cpu_write_conf3 };
}

RESET_CIA()
{
#ifdef HAVE_PRINTER
    pruser_write_strobe(1);
    pruser_write_data(0xff);
#endif
#ifdef HAVE_RS232
    rsuser_write_ctrl(0xff);
    rsuser_set_tx_bit(1);
#endif
    iec_info = iec_get_drive_port();
}

PRE_STORE_CIA()
{
    vic_ii_handle_pending_alarms(maincpu_num_write_cycles());
}

PRE_READ_CIA()
{
    vic_ii_handle_pending_alarms(0);
}

PRE_PEEK_CIA()
{
    vic_ii_handle_pending_alarms(0);
}

STORE_CIAPA()
{
    if (oldpa != byte) {
        BYTE tmp;
        int new_vbank;

#ifdef HAVE_RS232
        if(rsuser_enabled && ((oldpa^byte)&0x04)) {
            rsuser_set_tx_bit(byte & 4);
        }
#endif
        tmp = ~byte;
        new_vbank = tmp & 3;
        if (new_vbank != vbank) {
            vbank = new_vbank;
            mem_set_vbank(new_vbank);
        }
        iec_cpu_write_callback[iec_callback_index](tmp);
#ifdef HAVE_PRINTER
        pruser_write_strobe(tmp & 0x04);
#endif
    }
}

UNDUMP_CIAPA()
{
#ifdef HAVE_RS232
    if(rsuser_enabled) {
	rsuser_set_tx_bit(byte & 4);
    }
#endif
    vbank = (byte ^ 3) & 3;
    mem_set_vbank(vbank);
    iec_cpu_undump(byte ^ 0xff);
}


STORE_CIAPB()
{
    if (drive[0].parallel_cable_enabled || drive[1].parallel_cable_enabled)
        parallel_cable_cpu_write(byte, ((addr == CIA_PRB) ? 1 : 0));
#ifdef HAVE_PRINTER
    pruser_write_data(byte);
#endif
#ifdef HAVE_RS232
    rsuser_write_ctrl(byte);
#endif
}

/* FIXME! */
UNDUMP_CIAPB()
{
    parallel_cable_cpu_undump(byte);
#ifdef HAVE_PRINTER
    pruser_write_data(byte);
#endif
#ifdef HAVE_RS232
    rsuser_write_ctrl(byte);
#endif
}

READ_CIAPA()
{
    if (!drive[0].enable && !drive[1].enable)
	return ((cia2[CIA_PRA] | ~cia2[CIA_DDRA]) & 0x3f) |
	    (iec_info->iec_fast_1541 & 0x30) << 2;
    if (drive[0].enable)
	drive0_cpu_execute();
    if (drive[1].enable)
	drive1_cpu_execute();
    byte = ( (cia2[CIA_PRA] | ~cia2[CIA_DDRA]) & 0x3f) | iec_info->cpu_port;
}

READ_CIAPB()
{
#ifdef HAVE_RS232
    byte = ((drive[0].parallel_cable_enabled || drive[1].parallel_cable_enabled)
            ? parallel_cable_cpu_read()
            : (rsuser_enabled
		? rsuser_read_ctrl()
		: 0xff ));
#else
    byte = ((drive[0].parallel_cable_enabled || drive[1].parallel_cable_enabled)
            ? parallel_cable_cpu_read()
            : 0xff );
#endif
    byte = (byte & ~cia2[CIA_DDRB]) | (cia2[CIA_PRB] & cia2[CIA_DDRB]);
}

READ_CIAICR()
{
    if (drive[0].parallel_cable_enabled)
        drive0_cpu_execute();
    if (drive[1].parallel_cable_enabled)
        drive1_cpu_execute();
}

POST_CIA_FUNCS()
{

#ifdef HAVE_PRINTER
void pruser_set_busy(int flank)
{
    if(!flank) {
	cia2_set_flag();
    }
}
#endif

}
