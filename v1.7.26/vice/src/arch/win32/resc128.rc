        MENUITEM SEPARATOR
        POPUP "Vide&o standard"
        BEGIN
            MENUITEM "&PAL-G",                      IDM_SYNC_FACTOR_PAL
            MENUITEM "&NTSC-M",                     IDM_SYNC_FACTOR_NTSC
