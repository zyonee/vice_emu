        BEGIN
            MENUITEM "&Double size",                IDM_TOGGLE_VDC_DOUBLESIZE
            MENUITEM "Dou&ble scan",                IDM_TOGGLE_VDC_DOUBLESCAN
            MENUITEM SEPARATOR
            MENUITEM "64KB video &memory",          IDM_TOGGLE_VDC_64KB
