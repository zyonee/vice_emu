        MENUITEM SEPARATOR
    	MENUITEM "Emulator &Identification",	    IDM_TOGGLE_EMUID
        POPUP "Function ROMS"
        BEGIN
            MENUITEM "Internal Function ROM",       IDM_TOGGLE_IFUNCTIONROM
            MENUITEM "Internal Function ROM name...", IDM_IFUNCTIONROM_NAME
            MENUITEM "External Function ROM",       IDM_TOGGLE_EFUNCTIONROM
