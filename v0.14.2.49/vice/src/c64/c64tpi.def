INCLUDES()
{
#include "parallel.h"
#include "tpi.h"
}

RESET()
{
	/* assuming input after reset */
	par_set_atn(0);
	par_set_ndac(0);
	par_set_nrfd(0);
	par_set_dav(0);
	par_set_eoi(0);
	par_set_bus(0);
}

STORE_PA()
{
		par_set_atn( b & 0x08 );
		par_set_dav( b & 0x10 );
		par_set_eoi( b & 0x20 );
		par_set_ndac( b & 0x40 );
		par_set_nrfd( b & 0x80 );
}

STORE_PB()
{
		par_set_bus( b );
}

#define	STORE_PC

READ_PA()
{
		b = par_atn ? 0 : 8;
		b += par_dav ? 0 : 16;
		b += par_eoi ? 0 : 32;
		b += par_ndac ? 0 : 64;
		b += par_nrfd ? 0 : 128;
}

READ_PB()
{
		b = par_bus;
}

#define	READ_PC

